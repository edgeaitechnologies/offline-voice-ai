<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OfflineVoiceAI Demo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Initializingâ€¦"
            android:textSize="14sp"
            android:textColor="#AAAAAA"
            android:layout_marginBottom="24dp" />

        <!-- STT Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speech-to-Text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#BB86FC"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_listen"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸŽ¤ Start Listening"
            android:textSize="16sp"
            android:backgroundTint="#BB86FC"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/txt_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:padding="16dp"
            android:background="#1E1E1E"
            android:textColor="#E0E0E0"
            android:textSize="14sp"
            android:hint="Recognized text will appear hereâ€¦"
            android:textColorHint="#666666"
            android:layout_marginBottom="32dp" />

        <!-- TTS Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text-to-Speech"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#03DAC5"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_speak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type text to speakâ€¦"
            android:textColor="#E0E0E0"
            android:textColorHint="#666666"
            android:backgroundTint="#03DAC5"
            android:padding="16dp"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"
            android:inputType="textMultiLine"
            android:minLines="2" />

        <Button
            android:id="@+id/btn_speak"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ”Š Speak"
            android:textSize="16sp"
            android:backgroundTint="#03DAC5"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>
